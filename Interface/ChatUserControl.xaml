<UserControl x:Class="Interface.ChatUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Interface"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="ChatListView" Grid.ColumnSpan="3">
        </ListView>

        <TextBox x:Name="MessageTextBox" Grid.Row="1" Grid.Column="0" />
        <Separator Width="5" Grid.Row="1" Grid.Column="1" Margin="5,0,5,0" />
        <Button x:Name="SendMessageButton" Click="SendMessageButton_Click" Grid.Column="2" Grid.Row="1" Width="100">Send Message</Button>
    </Grid>
</UserControl>